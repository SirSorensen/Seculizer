{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/dts",
    // optional if you're using babel to transpile TS -> JS
    "emitDeclarationOnly": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"]
  },
  "include": ["src/**/*"]
}
